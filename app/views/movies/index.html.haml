-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{ class: css_for_column(:title) }
        = link_to "Movie Title", movies_url_for_column(:title), id: "title_header"
      %th Rating
      %th{ class: css_for_column(:release_date) }
        = link_to "Release Header", movies_url_for_column(:release_date) , id: "release_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
